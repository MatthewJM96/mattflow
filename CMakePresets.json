        },
        {
            "name": "Clang-x64-Debug",
            "displayName": "Clang x64 Debug",
            "description": "Packaging for Clang x64 debug build.",
            "configurePreset": "Clang-x64-Debug",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
