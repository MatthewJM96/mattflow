{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "description": "Base configure preset all others inherit from.",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}"
        },
        {
            "name": "GCC-x64-Debug",
            "displayName": "GCC x64 Debug",
            "description": "Configuration for GCC x64 debug build.",
            "inherits": "base",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "GCC-x64-Release",
            "displayName": "GCC x64 Release",
            "description": "Configuration for GCC x64 release build.",
            "inherits": "base",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_BUILD_TYPE": "Release"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "Clang-x64-Debug",
            "displayName": "Clang x64 Debug",
            "description": "Configuration for Clang x64 debug build.",
            "inherits": "base",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "Clang-x64-Release",
            "displayName": "Clang x64 Release",
            "description": "Configuration for Clang x64 release build.",
            "inherits": "base",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_BUILD_TYPE": "Release"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "Clang-x64-Gperf",
            "displayName": "Clang x64 Gperf Profiler",
            "description": "Configuration for Clang x64 with Gperf profiler build.",
            "inherits": "base",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_BUILD_TYPE": "Release",
                "MATTFLOW_ENABLE_GPERF_PROFILER": "On"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "VS2022-x64-Debug",
            "displayName": "VS2022 x64 Debug",
            "description": "Configuration for VS2022 x64 debug build.",
            "inherits": "base",
            "generator": "Visual Studio 17 2022",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "VS2022-x64-Release",
            "displayName": "VS2022 x64 Release",
            "description": "Configuration for VS2022 x64 release build.",
            "inherits": "base",
            "generator": "Visual Studio 17 2022",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "GCC-x64-Debug",
            "displayName": "GCC x64 Debug",
            "description": "Configuration for GCC x64 debug build.",
            "configurePreset": "GCC-x64-Debug",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "targets": [
                "mattflow",
                "mattflow_cli",
                "mattflow_tests"
            ],
            "jobs": 10
        },
        {
            "name": "GCC-x64-Release",
            "displayName": "GCC x64 Release",
            "description": "Configuration for GCC x64 release build.",
            "configurePreset": "GCC-x64-Release",
            "condition": {
                "type": "equals",
